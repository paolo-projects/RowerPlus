<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="@dimen/trainingInfoArrowSize"
        android:layout_height="@dimen/trainingInfoArrowSize"
        android:layout_marginStart="@dimen/trainingInfoMargin"
        android:contentDescription="@string/training_info_swipe_left"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_arrow_left_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="@dimen/trainingInfoArrowSize"
        android:layout_height="@dimen/trainingInfoArrowSize"
        android:layout_marginEnd="@dimen/trainingInfoMargin"
        android:contentDescription="@string/training_info_swipe_right"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_arrow_right_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>